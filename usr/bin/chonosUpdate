#! /bin/bash
PACOTES="chonos chonos-cert chonos-ddnsmng chonos-embeddedmas chonos-firmwaremng chonos-log chonos-network chonos-sysconfig chonos-task javino jason-embedded"

while getopts a:-: flag
do
    case "${flag}" in
        -) opt=${OPTARG};;
    esac
done

if [ "$opt" = "" ]; then
    apt update
    apt install $PACOTES
    exit 0
elif [ "$opt" = "back" ]; then
    #chonos-task -t "apt update; apt install $PACOTES -y"
    # precisa ser revisto quando tem atualização no pacote chonOS, pois reinicia o próprio chonos-task
    exit 0
fi